<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InserirPessoa</servlet-name>
        <servlet-class>br.edu.fatectq.pessoa.InserirPessoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirPessoa</servlet-name>
        <servlet-class>br.edu.fatectq.pessoa.ExcluirPessoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirCategoria</servlet-name>
        <servlet-class>br.edu.fatectq.produto.InserirCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirCategoria</servlet-name>
        <servlet-class>br.edu.fatectq.produto.ExcluirCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarCategoria</servlet-name>
        <servlet-class>br.edu.fatectq.produto.AlterarCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirProduto</servlet-name>
        <servlet-class>br.edu.fatectq.produto.ExcluirProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirProduto</servlet-name>
        <servlet-class>br.edu.fatectq.produto.InserirProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarProduto</servlet-name>
        <servlet-class>br.edu.fatectq.produto.AlterarProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InserirPessoa</servlet-name>
        <url-pattern>/InserirPessoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirPessoa</servlet-name>
        <url-pattern>/ExcluirPessoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirCategoria</servlet-name>
        <url-pattern>/InserirCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirCategoria</servlet-name>
        <url-pattern>/ExcluirCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarCategoria</servlet-name>
        <url-pattern>/AlterarCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirProduto</servlet-name>
        <url-pattern>/ExcluirProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirProduto</servlet-name>
        <url-pattern>/InserirProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarProduto</servlet-name>
        <url-pattern>/AlterarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarPessoa</servlet-name>
        <url-pattern>/AlterarPessoa</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>Jersey REST Service</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>br.edu.fatectq.resources</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AlterarPessoa</servlet-name>
        <servlet-class>br.edu.fatectq.pessoa.AlterarPessoa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey REST Service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
</web-app>
